#:import Bar view.component.bar.Bar
#:set gem_size 96

<GemShow@Popup>:
    size_hint: 0.9, 0.75
    auto_dismiss: True
    title_align: 'center'
    title: ''
    text: ''
    BoxLayout:
        id: layout
        orientation: 'vertical'
        padding: sp(5)
        spacing: sp(10)
        Label:
            text: root.text
            halign: 'left'

<CollectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        Bar:
            id: header
            title: "Coleção"
            bgcolor: (.2, .2, .2, 1)
            size_hint: None, None
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: gem_list
                size_hint_y: None
                height: self.minimum_height
                cols: root.size[0] // gem_size
                row_default_height: gem_size
                col_default_width: gem_size
                spacing: sp(10)
                padding: sp(10)

