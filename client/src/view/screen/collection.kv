#:import Bar view.component.bar.Bar
#:set gem_size 96

<CollectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        Bar:
            id: header
            title: "Coleção"
            bgcolor: (.2, .2, .2, 1)
            size_hint: None, None
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                id: gem_list
                size_hint_y: None
                height: self.minimum_height
                cols: root.size[0] // gem_size
                row_default_height: gem_size
                col_default_width: gem_size
                spacing: sp(10)
                padding: sp(10)
    Label:
        text: "Nenhuma gema"
        center: root.center
        opacity: 0.0 if len(root.gems) else 1.0

