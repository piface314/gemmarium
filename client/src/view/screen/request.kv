#:import Bar view.component.bar.Bar

<WaitLabel@Label>:
    text: '0:00:00'
    font_size: 50
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<RequestScreen>:
    BoxLayout:
        orientation: 'vertical'
        Bar:
            id: header
            title: "Obter"
            bgcolor: (.2, .2, .2, 1)
            size_hint: None, None
        BoxLayout:
            orientation: 'vertical'
            padding: sp(20)
            RelativeLayout:
                RelativeLayout:
                    id: display
                    size_hint: None, None
                    size: self.parent.size[0]-sp(40), self.parent.size[0]-sp(40)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas:
                        Color:
                            rgba: .2, .2, .2, 1
                        Ellipse:
                            size: self.size
            Label:
                text: root.msg
                size_hint: 1, None
                font_size: 16
                text_size: self.size[0], None 
                valign: 'middle'
                halign: 'center'
            Button:
                id: request_btn
                text: 'Solicitar gema'
                size_hint: 1, None
                on_release: root.request()
                disabled: root.button_disabled