<GemHolder>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2 if self.highlight and self.state == 'down' else 0
        Rectangle:
            pos: 0, -10
            size: self.size
    Image:
        id: base
        allow_stretch: True
        size_hint: 1, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<GemShow@Popup>:
    size_hint: 0.9, 0.75
    auto_dismiss: True
    title_align: 'center'
    title: ''
    text: ''
    BoxLayout:
        id: layout
        orientation: 'vertical'
        padding: sp(5)
        spacing: sp(10)
        Label:
            text: root.text
            halign: 'left'
            text_size: self.parent.width - sp(10), None
            size: self.texture_size