#:import IconButton view.component.icon_button.IconButton
#:set gpad sp(10)

<ToggleRow>:
    orientation: 'horizontal'
    spacing: sp(5)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1 if self.index else 0
        Rectangle:
            size: self.width, 1
            pos: self.x, self.y + self.height + gpad/2
    Label:
        text_size: self.size
        text: root.text
        markup: True
        halign: 'left'
        valign: 'middle'
        font_size: 16
    IconButton:
        icon: root.check_icon
        icon_color: 1, 1, 1, int(root.value)
        size_hint: None, None
        size: self.parent.size[1]//2, self.parent.size[1]//2
        padding: sp(4), sp(4)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_release:
            root.value = not root.value
            root.toggle(root.value)
    

<ToggleList>:
    orientation: 'vertical'
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            id: toggle_list
            size_hint_y: None
            width: root.width
            height: self.minimum_height
            cols: 1
            col_default_width: root.width - gpad*2
            row_default_height: sp(64)
            spacing: gpad
            padding: gpad
