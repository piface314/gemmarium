#:set h cm(1.5)

<IconButton@Button>:
    pad: 6
    tx: None
    size_hint: None, None
    size: h-self.pad*2, h-self.pad*2
    canvas:
        Rectangle:
            size: self.size[0] - self.pad*2, self.size[1] - self.pad*2 
            pos: self.pos[0] + self.pad, self.pos[1] + self.pad
            texture: self.tx

<Bar>:
    size: self.parent.size[0], h
    canvas.before:
        Color:
            rgba: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size
    RelativeLayout:
        pos: root.pos
        size: root.size
        StackLayout:
            id: lt_stack
            orientation: 'tb-lr'
            size: root.size
            padding: root.padding
        StackLayout:
            id: rt_stack
            orientation: 'tb-rl'
            size: root.size
            padding: root.padding
        Label:
            id: title
            text: root.title
            font_name: 'res/bold-title.ttf'
            font_size: 24
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        