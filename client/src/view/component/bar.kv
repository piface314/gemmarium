<Bar>:
    size: self.parent.size[0], cm(1.5)
    canvas.before:
        Color:
            rgba: self.bgcolor
        Rectangle:
            pos: self.pos
            size: self.size
    RelativeLayout:
        pos: root.pos
        size: root.size
        StackLayout:
            id: lt_stack
            orientation: 'tb-lr'
            size: root.size
            padding: root.padding
        StackLayout:
            id: rt_stack
            orientation: 'tb-rl'
            size: root.size
            padding: root.padding
        Label:
            id: title
            text: root.title
            font_name: 'res/bold-title.ttf'
            font_size: 24
            pos_hint: {'center_x': 0.5*root.offset, 'center_y': 0.5}
        