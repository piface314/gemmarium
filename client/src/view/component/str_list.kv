#:import IconButton view.component.icon_button.IconButton
#:set gpad sp(10)

<StrRow>:
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1 if self.index else 0
        Rectangle:
            size: self.width, 1
            pos: self.x, self.y + self.height + gpad/2
    Label:
        text_size: self.size
        text: root.text
        halign: 'left'
        valign: 'middle'
        font_size: 16
    IconButton:
        icon: root.del_icon
        size_hint: None, None
        size: self.parent.size[1], self.parent.size[1]
        padding: sp(5), sp(5)
        on_release: root.delete(root.index)
    

<StrList>:
    orientation: 'vertical'
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            id: str_list
            size_hint_y: None
            width: root.width
            height: self.minimum_height
            cols: 1
            col_default_width: root.width - gpad*2
            row_default_height: sp(32)
            spacing: gpad
            padding: gpad
    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: root.size[0], cm(1.5)
        padding: sp(5)
        spacing: sp(5)
        canvas:
            Color:
                rgba: (.2, .2, .2, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: text_input
            hint_text: root.hint_text
            multiline: False
            padding_y: self.height/2-(self.line_height/2)*len(self._lines), 0
        IconButton:
            icon: root.add_icon
            size_hint: None, None
            size: self.parent.size[1]-sp(10), self.parent.size[1]-sp(10)
            padding: sp(5), sp(5)
            on_release: root.handle_add(text_input.text)
